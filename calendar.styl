#CloudCalendar
  /*全局背景色*/
  background-color transparent
  a
    text-decoration none

.cal-head
  position relative
  height 20px
  padding 8px 6px 2px 6px

.cal-prev,.cal-next
  position absolute
  top 9px
  width 9px
  height 10px
  /*更改间距*/
  padding 0px
  border 1px solid transparent
  color #fff
  outline 0


/*上下页箭头*/
.cal-prev
  left 8px
  &:before
    border-right 9px solid var(--text-color)

.cal-next
  right 8px
  &:before
    border-left 9px solid var(--text-color)

.cal-prev:before,.cal-next:before
  content ''
  display block
  width 0
  height 0
  border-top 5px solid transparent
  border-bottom 5px solid transparent

.cal-title
  width 120px
  margin 0 auto
  color #808080
  font bold 14px/18px Arial
  text-align center
  a
    border 1px solid transparent
    /*年份颜色*/
    color color-link

.cal,
.cal th,
.cal td
  border 1px solid #eee

.cal
  border-collapse separate
  border-spacing 0
  border-width 1px 0 0 1px
  table-layout fixed
  width 100%
  margin 0
  th
    /*星期颜色*/
    color color-link
    border-width 0 1px 1px 0
    font-weight 700
  td
    border-width 0 1px 1px 0
  tbody
    a
      /*有提交的天*/
      background-color #4d80e6
      color #ffffff
      display block
      border-bottom 0px solid transparent
      font-weight 700
    .cal-today
      /*今天*/
      color #e91e63
      font-weight bold
      background-color var(--text-color)
  .cal-gray
    /*没提交的天*/
    color transparent

.cal th {
  color var(--link-color)
  background var(--text-color)
}

.cal th,
.cal td
  font-weight normal
  /*数字字体大小*/
  line-height 1.5
  padding 0
  text-align center
  /*更改背景色*/
  background-color transparent

.cal .cal-foot
  /*底栏箭头切换月*/
  color var(--link-color)

.cal .cal-foot:hover
  background-color color-link
  color #26acb0
  cursor pointer

.cal-title a:hover,
.cal-prev:hover,
.cal-next:hover,
.cal .cal-foot:focus
  /*底栏箭头切换月-鼠标覆盖*/
  background-color color-link
  color #fff
  cursor pointer

/*鼠标覆盖后的颜色*/
.cal tbody a:hover,
.cal tbody a:focus
  background-color #68DC6E
  color #fff
  cursor pointer

.site-state
  padding 0px 0px 18px 0px
  
/*月份文章*/
.cal-title a:hover
  background-color #68DC6E
  
